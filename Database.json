{
    "name": "Contacts",
    "tables": [
        {
            "name": "Contacts",
            "hasGuid": true,
            "columns": [
                {
                    "name": "UserGuid",
                    "nullable": true
                }
            ]
        },
        {
            "name": "Profiles",
            "hasGuid": true,
            "columns": [
                {
                    "name": "ContactId"
                },
                {
                    "name": "FirstName"
                },
                {
                    "name": "LastName"
                },
                {
                    "name": "FullName",
                    "isGenerated": true,
                    "formula": "concat(ifnull(FirstName, ''), ' ', ifnull(LastName, ''))"
                }
            ]
        },
        {
            "name": "Addresses",
            "hasGuid": true,
            "columns": [
                {
                    "name": "ContactId"
                },
                {
                    "name": "CountryGuid"
                },
                {
                    "name": "ProvinceOrStateGuid",
                    "nullable": true
                },
                {
                    "name": "CityGuid"
                },
                {
                    "name": "Rest",
                    "nullable": true
                },
                {
                    "name": "Remarks",
                    "nullable": true
                }
            ]
        },
        {
            "name": "AddressLocations",
            "oneToOneWith": "Addresses",
            "columns": [
                {
                    "name": "Latitude",
                    "type": "decimal"
                },
                {
                    "name": "Longitude",
                    "type": "decimal"
                },
                {
                    "name": "Location",
                    "type": "geography"
                }
            ]
        },
        {
            "name": "Phones",
            "hasGuid": true,
            "columns": [
                {
                    "name": "ContactId"
                },
                {
                    "name": "CountryGuid",
                    "nullable": true
                },
                {
                    "name": "PhoneValue"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "ContactId",
                        "CountryGuid",
                        "PhoneValue"
                    ],
                    "isUnique": true
                },
                {
                    "columns": [
                        "PhoneValue"
                    ]
                }
            ]
        }
    ],
    "views": [
        {
            "name": "ProfileViews",
            "query": [
                "select",
                "    Profiles.Id,",
                "    Profiles.Guid,",
                "    Profiles.FirstName,",
                "    Profiles.LastName,",
                "    Profiles.FullName,",
                "    Profiles.ContactId,",
                "    Contacts.Guid as ContactGuid,",
                "    Contacts.UserGuid",
                "from Profiles",
                "inner join Contacts",
                "on Profiles.Id = Contacts.Id"
            ]
        }
    ]
}